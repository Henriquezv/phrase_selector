<p id="notice"><%= notice %></p>

<h1>Frases</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Phrase.human_attribute_name(:id)%> </th>
      <th><%= Phrase.human_attribute_name(:text)%> </th>
      <th><%= MoodType.human_attribute_name(:description)%> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phrases.each do |phrase| %>
      <tr>
        <td><%= phrase.id %></td>
        <td><%= phrase.text %></td>
        <td><%= phrase.mood_type.description %></td>
        <td><%= link_to t('links.show'), phrase, class:"btn btn-primary" %></td>
        <td><%= link_to t('links.edit'), edit_phrase_path(phrase), class:"btn btn-primary" %></td>
        <td><%= link_to t('links.delete'), phrase, method: :delete, data: { confirm: 'Tem certeza?' },class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_phrase_path, class:"btn btn-primary" %>


