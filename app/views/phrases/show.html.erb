<p id="notice"><%= notice %></p>

<form>  
  <div class="form-group">
    <%= label_tag nil, @phrase.class.human_attribute_name(:text) %>
    <%= text_field_tag nil, @phrase.text, class:"form-control", disabled: true%>
  </div>
  <div class="form-group">
    <%= label_tag nil, @phrase.class.human_attribute_name(:mood_type) %>
    <%= text_field_tag nil, @phrase.mood_type.description, class:"form-control", disabled: true%>
  </div>
</form>
<br>

<%= link_to 'Editar', edit_phrase_path(@phrase), class:"btn btn-primary" %> |
<%= link_to 'Voltar', phrases_path,  class:"btn btn-primary" %>
